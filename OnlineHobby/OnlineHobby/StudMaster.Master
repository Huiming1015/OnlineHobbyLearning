        .navbar-nav > li {
            padding-left: 20px;
            padding-right: 20px;
        }

        .navbar-default .navbar-nav > li > a:hover, .navbar-default .navbar-nav > li > a:focus {
            color: #BB7930; /*Sets the text hover color on navbar*/
